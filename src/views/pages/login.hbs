<div class="flower-app-container">
    <div class="flower-header">
        <img src="/img/flower-logo.png" alt="FlowerFindr Logo" class="logo">
        <h1>Welcome Back</h1>
        <p class="tagline">Sign in to identify beautiful blooms</p>
    </div>

    <div class="form-card">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <div class="input-wrapper">
                    <i class="fa fa-user"></i>
                    <input type="text" id="username" name="username" placeholder="Enter your username" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-wrapper">
                    <i class="fa fa-lock"></i>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
            </div>
            
            <button type="submit" class="btn-primary">Sign In <i class="fa fa-arrow-right"></i></button>
        </form>
        
        <div class="form-footer">
            <p>Don't have an account? <a href="/register" class="accent-link">Register here</a></p>
        </div>
    </div>

    <div class="flower-decoration bottom-left"></div>
    <div class="flower-decoration bottom-right"></div>
</div>